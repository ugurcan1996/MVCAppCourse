@{
    ViewData["Title"] = "Create";
}

@model Course


<div class="container mb-5">

    @if (ViewBag.message != null)
    {
        <div class="alert alert-success mt-3">
            @ViewBag.message
        </div>
    }

    <form method="post" asp-controller="Course" asp-action="Create">
        <div class="mb-3">
            <label class="form-label">Kurs Adı</label>
            <input asp-for="Name" type="text" class="form-control">
            <span asp-validation-for="Name"></span>
            @*asp-validation-for hata mesajlarını ekranda göstermek için kullanılır*@
        </div>
        <div class="mb-3">
            <label class="form-label">Açıklama</label>
            <textarea asp-for="Content" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            <span asp-validation-for="Content"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Fiyat</label>
            <input asp-for="Price" type="number" class="form-control">
            <span asp-validation-for="Price"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Toplam Saat</label>
            <input asp-for="TotalHours" type="number" class="form-control">
            <span asp-validation-for="TotalHours"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Başlangıç Tarihi</label>
            <input asp-for="StartDate" type="date" class="form-control">
            <span asp-validation-for="StartDate"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Bitiş Tarihi</label>
            <input asp-for="EndDate" type="date" class="form-control">
            <span asp-validation-for="EndDate"></span>
        </div>
        <div>
            <button class="btn btn-primary" type="submit">
                Kaydet
            </button>
        </div>
    </form>
</div>
